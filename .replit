modules = ["web", "python-base-3.13", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Serve HTML Site"
author = 36003217
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Static Server"

[[workflows.workflow]]
name = "Static Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve . --listen 5000 --no-clipboard"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45125
externalPort = 3000

[deployment]
deploymentTarget = "static"
publicDir = "src"

[agent]
expertMode = true
